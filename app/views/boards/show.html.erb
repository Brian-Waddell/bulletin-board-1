<div>
  <div>
    <h1>
    <%= @the_board.name %> 
    </h1>
<hr>

<h2> Add a new post </h2>
    <form action=""">
      <div>
      <label for = "input_title"> Title </label>
      <input id = "input_title" type = "text" name = "query_title">
      </div>
      <label for = "body_box"> Body </title>
      <textarea id = "body_box" name = "query_body"> </textarea>
      </div>
      <div>
      <label for="expires_box"> Expires on </label>
      <input id = "expires_box" type= "date" name = "query_expires_on">
      <div>
      <button> Add post </button>
    </form>

    <div>
      <div>
        <a href="/boards">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_board/<%= @the_board.id %>">
          Delete board
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_board.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_board.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_board.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit board
    </h2>

    <form action="/modify_board/<%= @the_board.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_board.name %>">
      </div>

      <button>
        Update board
      </button>
    </form>
  </div>
</div>

<hr>
